
<div class='container'>
<h2>Seach for you local represenatives</h2>

<%= form_with(url: search_path, method: "get", local: true) do %>
  <%= label_tag(:location, "Enter your address:") %>
  <%= text_field_tag(:location) %>
  <%= submit_tag("Search") %>
<% end %>

<% if @response %>
  <div>
    <%= @response['officials'] %>
  </div>
<% end %>
</div>